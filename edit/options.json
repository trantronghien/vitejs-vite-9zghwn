{
  "id": "#childID.1",
  "type": "group",
  "label": "Tiêu chí selected",
  "layout": "vertical",
  "elements": [
    {
      "id": "#childID.1.1",
      "parentId": "#childID.1",
      "type": "label",
      "properties": {
        "value": "#options.value",
        "fontSize": "14",
        "fontWeight": "normal" // normal
      },
      "rule": [],
      "elements": []
    },
    {
      "id": "#childID.1.2",
      "parentId": "#childID.1",
      "type": "option",
      "properties": {
        "readonly": false,
        "value": "#options.value", // tùy chọn mặc định
        "enum": "#options.enum",
        "multiselect": false
      },
      "rule": [],
      "elements": []
    },
    {
      "id": "#childID.1.3",
      "label": "",
      "type": "group",
      "layout": "horizontal",
      "elements": [
        {
          "id": "#childID.1.3.1",
          "parentId": "#childID.1.3",
          "type": "text",
          "label": "Ghi chú",
          "properties": {
            "required": "#options.isRequireNote", // bắt buộc ghi chú
            "value": "",
            "readonly": false,
            "length": 300,
            "multiline": false,
            "hint": "Xin nhập ghi chú"
          },
          "rule": [
            {
              "action": "hide",
              "condition": {
                "ref": "#childID.1.3.1",
                "schema": {
                  "required": false
                }
              }
            }
          ]
        },
        {
          "id": "#childID.1.3.2",
          "parentId": "#childID.1.3",
          "type": "image",
          "label": "Ảnh Bt",
          "properties": {
            "readonly": false,
            "required": "#options.isRequireImage", // bắt buộc có ảnh
            "description": "Cần chụp ảnh để",
            "minimum": 0
          },
          "rule": [
            {
              "action": "hide",
              "condition": {
                "ref": "#childID.1.3.2",
                "schema": {
                  "required": false
                }
              }
            }
          ],
          "elements": []
        }
      ]
    },
    {
      "id": "#childID.1.4",
      "label": "",
      "type": "group",
      "layout": "vertical",
      "elements": [
        {
          "id": "#childID.1.4.1",
          "parentId": "#childID.1.4",
          "type": "label",
          "properties": {
            "value": "Ghi chú TPKT",
            "fontSize": "14",
            "fontWeight": "normal" // normal
          },
          "rule": [],
          "elements": []
        },
        {
          "id": "#childID.1.4.2",
          "parentId": "#childID.1.4",
          "type": "text",
          "properties": {
            "readonly": true,
            "multiline": false
          },
          "rule": [
            {
              "action": "hide",
              "condition": {
                "ref": "#childID.1.4",
                "schema": {
                  "value": ""
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
